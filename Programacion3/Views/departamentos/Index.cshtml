@model IEnumerable<Programacion3.Models.departamentos>

@{
    ViewBag.Title = "Departamentos";
}

<h2 class="tit">Departamentos</h2>

<p>
    @Html.ActionLink("Crear nuevo", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Codigo")
        </th>
        <th>
            @Html.DisplayName("Nombre")
        </th>
        <th>
            @Html.DisplayName("Encargado")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.codigoDepartamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.encargado)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id_departamento }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.id_departamento }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.id_departamento })
            </td>
        </tr>
    }

</table>
