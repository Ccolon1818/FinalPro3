@model IEnumerable<Programacion3.Models.permisos>

@{
    ViewBag.Title = "Permisos";
}

<h2 class="tit">Permisos</h2>

<p>
    @Html.ActionLink("Crear nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Desde")
        </th>
        <th>
            @Html.DisplayName("Hasta")
        </th>
        <th>
            @Html.DisplayName("Comentario")
        </th>
        <th>
            @Html.DisplayName("ID Empleado")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.desde)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.hasta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.comentario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.empleados.codigoEmpleado)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id_permiso }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.id_permiso }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.id_permiso })
        </td>
    </tr>
}

</table>
