@model IEnumerable<Programacion3.Models.licencias>

@{
    ViewBag.Title = "Licencias";
}

<h2 class="tit">Licencias</h2>

<p>
    @Html.ActionLink("Crear nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Desde")
        </th>
        <th>
            @Html.DisplayName("Hsta")
        </th>
        <th>
            @Html.DisplayName("Motivo")
        </th>
        <th>
            @Html.DisplayName("Comentarios")
        </th>
        <th>
            @Html.DisplayName("ID Empleado")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.desde)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.hasta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.motivo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.comentarios)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.empleados.codigoEmpleado)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id_licencia }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.id_licencia }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.id_licencia })
        </td>
    </tr>
}

</table>
